def contador(seq):
     count = 1
     lita= []
     seq = seq.upper()
    
     for x in range(1, len(seq)):
        if seq[x] == seq[x-1]
           count+=1
           if count == 3:
              posicao = x-1
    
     elif seq[x] != seq[x-1]:
        if count>=3:
           lista.append((seq[x-1], count, posicao))
           count = 1
        else:
           count = 1
     return lista        
